{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["all", "-j4"]
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["clean"]
        },
        {
            "label": "JFlash",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j4","jflash"]
        },
        {
            "label": "STFlash",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j4", "stflash"]
        },
        {
            "label": "UARTFlash",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j4", "uflash", "PORT=/dev/ttyUSB0"]
        }
    ]
}